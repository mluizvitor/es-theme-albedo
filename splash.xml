<theme>
  <formatVersion>7</formatVersion>

  <view name="splash">
    <splash name="splash">
      <backgroundColor>121212</backgroundColor>
    </splash>

    <image name="background">
      <!-- Leave default for better OS/device portability -->
    </image>
    <image name="progressbar">
      <color>454545</color>
      <!-- <colorEnd>${primaryColorDarkVariant}</colorEnd> -->
      <roundCorners>0</roundCorners>
    </image>
    <image name="progressbar:active">
      <color>DEDEDE</color>
      <!-- <colorEnd>${primaryColor}</colorEnd> -->
    </image>
    <text name="label">
      <alignment>center</alignment>
      <fontPath>./assets/fonts/Teko/Teko-SemiBold.ttf</fontPath>
      <fontSize>0.05</fontSize>
      <color>ffffff</color>
    </text>
  </view>
</theme>