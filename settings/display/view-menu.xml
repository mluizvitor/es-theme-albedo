<!--
  Theme: Albedo
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>


  <variables>
    <menuFontSizeH1>0.053125</menuFontSizeH1>
    <menuFontSizeBody>0.040625</menuFontSizeBody>
    <menuFontSizeSmall>0.034375</menuFontSizeSmall>
  </variables>

  <!-- Menu Settings -->
  <view name="menu">
    <menuText name="menutext">
      <fontPath>${typefaceRegular}</fontPath>
      <fontSize>${menuFontSizeBody}</fontSize>

      <selectedColor>121212</selectedColor>
      <selectorColor>${primaryColorAlt}</selectorColor>

      <color>${primaryColorLightVariant}</color>
      <separatorColor>${primaryColorLightVariant}0f</separatorColor>
    </menuText>

    <menuText name="menufooter">
      <fontPath>${typefaceRegular}</fontPath>
      <fontSize>${menuFontSizeSmall}</fontSize>
      <color>${primaryColorLightVariant}cc</color>
    </menuText>

    <menuTextSmall name="menutextsmall">
      <fontPath>${typefaceRegular}</fontPath>
      <fontSize>${menuFontSizeSmall}</fontSize>
      <color>${primaryColorAlt}</color>
    </menuTextSmall>

    <menuGroup name="menugroup">
      <fontPath>${typefaceTitleBold}</fontPath>
      <fontSize>${menuFontSizeSmall}</fontSize>

      <color>${primaryColorLightVariant}</color>
      <separatorColor>${primaryColor}</separatorColor>

      <backgroundColor>${primaryColorDarkVariant}</backgroundColor>
    </menuGroup>

    <menuIcons name="menuicons">
      <iconSystem>./assets/icons/cog.png</iconSystem>
      <iconUpdates>./assets/icons/update.png</iconUpdates>
      <iconControllers>./assets/icons/gamepad.png</iconControllers>
      <iconGames>./assets/icons/gamepad-variant-outline.png</iconGames>
      <iconUI>./assets/icons/brush-variant.png</iconUI>
      <iconSound>./assets/icons/volume-high.png</iconSound>
      <iconNetwork>./assets/icons/wifi.png</iconNetwork>
      <iconScraper>./assets/icons/image.png</iconScraper>
      <iconAdvanced>./assets/icons/tune-variant.png</iconAdvanced>
      <iconQuit>./assets/icons/exit-to-app.png</iconQuit>
      <iconRetroachievements>./assets/icons/trophy.png</iconRetroachievements>
      <iconKodi>./assets/icons/kodi.png</iconKodi>
      <iconRestart>./assets/icons/restart.png</iconRestart>
      <iconShutdown>./assets/icons/power.png</iconShutdown>
      <iconFastShutdown>./assets/icons/power.png</iconFastShutdown>
    </menuIcons>

    <menuText name="menutitle">
      <fontPath>${typefaceTitleBold}</fontPath>
      <fontSize>${menuFontSizeH1}</fontSize>
      <color>${primaryColorLightVariant}</color>
    </menuText>

    <menuBackground name="menubg">
      <path>./assets/menu.png</path>
      <size>1 1</size>

      <color>1a1a1a</color>
    </menuBackground>

    <menuButton name="menubutton">
      <path>./assets/button-normal.png</path>
      <filledPath>./assets/button-hover.png</filledPath>
    </menuButton>

    <menuSwitch name="menuswitch">
      <pathOn>./assets/switch-on.png</pathOn>
      <pathOff>./assets/switch-off.png</pathOff>
    </menuSwitch>

    <menuTextEdit name="menutextedit">
      <inactive>./assets/input_inactive-dark.svg</inactive>
      <active>./assets/input_active-dark.svg</active>
    </menuTextEdit>
  </view>
</theme>