<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <header1F>0.05</header1F>
    <header2F>0.04375</header2F>
    <bodyF>0.0375</bodyF>
    <tinyF>0.03125</tinyF>
  </variables>

  <view name="system, basic, detailed, grid">
    <helpsystem name="help">
      <fontSize>${tinyF}</fontSize>
    </helpsystem>
    
    <image name="borderOverlay" extra="true">
      <path>./assets/ratio32/borders.png</path>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <zIndex>110</zIndex>
    </image>
  </view>

  <view name="basic, detailed">
    <text name="system_name">
      <pos>0.05 0.1125</pos>      <!--480x320 / 24x 36y-->
      <origin>0 0.5</origin>      <!--vertical center-->
    </text>
  </view>

  <view name="basic">
    <textlist name="gamelist">
      <pos>0 0.225</pos>      <!-- 480x320 / 0x 72y -->
      <size>1 0.7</size>      <!-- 480x320 / 480x 224y-->
      <horizontalMargin>0.05</horizontalMargin>
    </textlist>
  </view>

  <view name="detailed">
    <textlist name="gamelist">
      <pos>0 0.225</pos>      <!-- 480x320 / 0x 72y -->
      <size>0.483333 0.7</size>      <!-- 480x320 / 232x 224y-->
      <horizontalMargin>0.05</horizontalMargin> <!-- 24px -->
    </textlist>

    <image name="md_image">
      <pos>0.733333 0.275</pos> <!-- 480x320 / 356x 88y -->
      <origin>0.5 0</origin>
      <maxSize>0.433333 0.5375</maxSize> <!-- 480x320 / 208x 172y -->
      <zIndex>32</zIndex>
      <roundCorners>0.02</roundCorners>
    </image>

    <image name="md_marquee">
      <pos>0.733333 0.275</pos> <!-- 480x320 / 352x 88y -->
      <origin>0.5 0.6</origin>
      <maxSize>0.366666 0.175</maxSize> <!-- 480x320 / 176x 56y -->
      <zIndex>33</zIndex>
    </image>

    <rating name="md_rating">
      <origin>0 0</origin>
      <pos>0.60833 0.83125</pos> <!-- 480x320 / 292x 266y-->
      <size>0.075</size>
    </rating>
  </view>

  <view name="grid">
    <text name="system_name">
      <pos>0.05 0.075</pos>      <!--480x320 / 24x 20y-->
      <origin>0 0.5</origin>      <!--vertical center-->
      <size>0.675 ${header2F}</size>
    </text>

    <text name="md_name">
      <fontSize>${bodyF}</fontSize>
      <fontPath>${fontRegular}</fontPath>
      <pos>0.05 0.15</pos>      <!--480x320 / 24x 48y-->
      <origin>0 0.5</origin>      <!--vertical center-->
      <size>0.9 ${bodyF}</size>
      <alignment>left</alignment>
      <zIndex>41</zIndex>
    </text>
  </view>


  <!-- Carousel Config -->
  <view name="system">
    <!-- Cards position -->
    <carousel name="systemcarousel">
      <size>0.33333333 1.3</size>
      <logoSize>0.2 1</logoSize>
      <logoScale>1.4</logoScale>
      <maxLogoCount>5</maxLogoCount>
      <logoPos>-0.25 0</logoPos>
    </carousel>

    <!-- System Name -->
    <text name="systemName" extra="true">
      <pos>0.35 0.05</pos> <!-- 480x320 / 40x 88y -->
      <size>0.58333333 ${header2F}</size> <!-- 480x320 / 280x -->
    </text>

    <!-- Total games per system -->
    <text name="systemInfo">
      <pos>0.38750000 0.05</pos>
      <size>0.58333333 ${bodyF}</size> <!-- 480x320 / 416x -->
    </text>

    <image name="osdBackground" extra="true">
      <path>./assets/ratio32/osd-bg.png</path>
    </image>

    <image name="borderOverlay" extra="true">
      <path>./assets/ratio32/borders.png</path>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <zIndex>110</zIndex>
    </image>
  </view>

  <!-- Clock Settings -->
  <view name="screen">
    <text name="clock">
      <pos>0.7 0.018750</pos>
      <size>0.16 ${bodyF}</size>
    </text>

    <batteryIndicator name="batteryIndicator">
      <pos>0.944 0.025</pos>
      <size>0.033333 0.05</size> <!-- 480x320 / 16x 16y -->

      <!-- Assets -->
      <full>./assets/ratio32/battery-full.png</full>
      <at75>./assets/ratio32/battery-75.png</at75>
      <at50>./assets/ratio32/battery-50.png</at50>
      <at25>./assets/ratio32/battery-25.png</at25>
      <empty>./assets/ratio32/battery-empty.png</empty>
      <incharge>./assets/ratio32/battery-charging.png</incharge>
      <networkIcon>./assets/ratio32/wifi.png</networkIcon>
    </batteryIndicator>
  </view>

</theme>
