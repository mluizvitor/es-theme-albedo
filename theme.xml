<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <fontLight>./assets/fonts/FiraSansCondensed/FiraSansCondensed-Regular.ttf</fontLight>
    <fontRegular>./assets/fonts/FiraSansCondensed/FiraSansCondensed-Medium.ttf</fontRegular>
    <fontBold>./assets/fonts/FiraSansCondensed/FiraSansCondensed-Bold.ttf</fontBold>

    <fontMonoRegular>./assets/fonts/FiraCode/FiraCode-Regular.ttf</fontMonoRegular>
    <fontMonoBold>./assets/fonts/FiraCode/FiraCode-Bold.ttf</fontMonoBold>

    <subset.themesettings>Main Color</subset.themesettings>
    <subset.variantSet>Monocolor Everywhere</subset.variantSet>
  </variables>

  <subset name="Flavor" displayName="${subset.themesettings}">
    <include name="strawberry" displayName="strawberry">./settings/colors/strawberry.xml</include>
    <include name="orange" displayName="orange">./settings/colors/orange.xml</include>
    <include name="banana" displayName="banana">./settings/colors/banana.xml</include>
    <include name="lime" displayName="lime">./settings/colors/lime.xml</include>
    <include name="mint" displayName="mint">./settings/colors/mint.xml</include>
    <include name="blueberry" displayName="blueberry">./settings/colors/blueberry.xml</include>
    <include name="grape" displayName="grape">./settings/colors/grape.xml</include>
    <include name="bubblegun" displayName="bubblegun">./settings/colors/bubblegun.xml</include>
    <include name="cocoa" displayName="cocoa">./settings/colors/cocoa.xml</include>
    <include name="slate" displayName="slate">./settings/colors/slate.xml</include>
  </subset>

  <subset name="SystemLogoMono" displayName="${subset.variantSet}">
    <include name="monoNo" displayName="No"/>
    <include name="monoYes" displayName="Yes"/>
  </subset>

  <include>./settings/colors/commom-dark.xml</include>

  <include>./settings/display/ratio32.xml</include>

  <include>./settings/display/commom.xml</include>
  <include>./settings/display/grid.xml</include>
  <include>./settings/display/boxes.xml</include>

</theme>
