<!--
  Theme: Albedo
  Author: mluizvitor
-->

<theme defaultTransition="instant">
  <formatVersion>7</formatVersion>

  <variables>
    <typefaceLight>./assets/fonts/FiraSansCondensed/FiraSansCondensed-Regular.ttf</typefaceLight>
    <typefaceRegular>./assets/fonts/FiraSansCondensed/FiraSansCondensed-Medium.ttf</typefaceRegular>
    <typefaceBold>./assets/fonts/FiraSansCondensed/FiraSansCondensed-Bold.ttf</typefaceBold>

    <typefaceTitleRegular>./assets/fonts/Teko/Teko-Medium.ttf</typefaceTitleRegular>
    <typefaceTitleBold>./assets/fonts/Teko/Teko-SemiBold.ttf</typefaceTitleBold>

    <fontSizeH1>0.05</fontSizeH1>
    <fontSizeH2>0.04375</fontSizeH2>
    <fontSizeBody>0.0375</fontSizeBody>
    <fontSizeSmall>0.03125</fontSizeSmall>
    <fontSizeTiny>0.028125</fontSizeTiny>

    <subset.settingsColorSchemeTitle>Accent color</subset.settingsColorSchemeTitle>
    <subset.settingsColorSchemeTitle lang="pt">Cor de destaque</subset.settingsColorSchemeTitle>
    <subset.settingsColorSchemeTitle lang="es">Acentuar el color</subset.settingsColorSchemeTitle>
    
    <subset.settingsMonochromaticTitle>Monochrome logos</subset.settingsMonochromaticTitle>
    <subset.settingsMonochromaticTitle lang="pt">Logos monocromáticos</subset.settingsMonochromaticTitle>
    <subset.settingsMonochromaticTitle lang="es">Logotipos monocromáticos</subset.settingsMonochromaticTitle>
    
    <subset.settingsScreenRatio>Screen ratio</subset.settingsScreenRatio>
    <subset.settingsScreenRatio lang="pt">Proporção da tela</subset.settingsScreenRatio>
    <subset.settingsScreenRatio lang="es">Formato de pantalla</subset.settingsScreenRatio>
    
    <subset.settingsStatusBar>Status bar</subset.settingsStatusBar>
    <subset.settingsStatusBar lang="pt">Barra de status</subset.settingsStatusBar>
    <subset.settingsStatusBar lang="es">Barra de estado</subset.settingsStatusBar>
  </variables>

  <subset name="colorScheme" displayName="${subset.settingsColorSchemeTitle}">
    <include name="blue" displayName="blue">./settings/colors/blue.xml</include>
    <include name="purple" displayName="purple">./settings/colors/purple.xml</include>
    <include name="pink" displayName="pink">./settings/colors/pink.xml</include>
    <include name="red" displayName="red">./settings/colors/red.xml</include>
    <include name="orange" displayName="orange">./settings/colors/orange.xml</include>
    <include name="yellow" displayName="yellow">./settings/colors/yellow.xml</include>
    <include name="green" displayName="green">./settings/colors/green.xml</include>
    <include name="teal" displayName="teal">./settings/colors/teal.xml</include>
    <include name="gray" displayName="gray">./settings/colors/gray.xml</include>
    <include name="brown" displayName="brown">./settings/colors/brown.xml</include>
  </subset>

  <subset name="Aspect Ratio" displayName="${subset.settingsScreenRatio}">
    <include ifArch="rg351p,amberelec-rg351p" name="ratio32" displayName="3:2" />
    <include ifArch="rg353p,rg351mp,rg351v,amberelec-rg353p,amberelec-rg351mp,amberelec-rg351v" name="ratio43" displayName="4:3" />
    <include ifArch="rg552,amberelec-rg552" name="ratio53" displayName="5:3" />
    
    <include ifNotArch="handheld,rg503,rg552,rg351p,rg353p,rg351mp,rg351v,amberelec-rg503,amberelec-rg552,amberelec-rg351p,amberelec-rg353p,amberelec-rg351mp,amberelec-rg351v" name="ratio32" displayName="3:2" />
    <include ifNotArch="handheld,rg503,rg552,rg351p,rg353p,rg351mp,rg351v,amberelec-rg503,amberelec-rg552,amberelec-rg351p,amberelec-rg353p,amberelec-rg351mp,amberelec-rg351v" name="ratio43" displayName="4:3" />
    <include ifNotArch="handheld,rg503,rg552,rg351p,rg353p,rg351mp,rg351v,amberelec-rg503,amberelec-rg552,amberelec-rg351p,amberelec-rg353p,amberelec-rg351mp,amberelec-rg351v" name="ratio53" displayName="5:3" />
  </subset>

  <subset name="Date Format" displayName="${subset.settingsDateFormat}">
    <include name="y-m-d" displayName="YYYY·MM·DD"/>
    <include name="m-d-y" displayName="MM·DD·YYYY"/>
    <include name="d-m-y" displayName="DD·MM·YYYY"/>
  </subset>

  <subset name="Monochromatic" displayName="${subset.settingsMonochromaticTitle}">
    <include name="monoNo" displayName="No"/>
    <include name="monoYes" displayName="Yes"/>
  </subset>

  <subset name="StatusBar" displayName="${subset.settingsStatusBar}">
    <include name="statusYes" displayName="Yes"/>
    <include name="statusNo" displayName="No"/>
  </subset>

  <include>./settings/display/view-general.xml</include>
  <include>./settings/display/view-system.xml</include>
  <include>./settings/display/view-menu.xml</include>
  <include>./settings/display/view-basic.xml</include>
  <include>./settings/display/view-detailed.xml</include>
  <include>./settings/display/view-grid.xml</include>

</theme>
